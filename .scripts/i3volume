#!/bin/bash

case $BLOCK_BUTTON in
	1) $TERMINAL -e pulsemixer & disown ;;
	3) pamixer -t ;;
	4) pamixer -i 5 ;;
	5) pamixer -d 5 ;;
esac

case $BUTTON in
	1) $TERMINAL -e pulsemixer & disown ;;
	3) pamixer -t ;;
	4) pamixer -i 5 ;;
	5) pamixer -d 5 ;;
esac

vol=$(pamixer --get-volume)

iconget() {
    if [[ $vol -ge 66 ]]; then
            icon="î€"
    elif [[ $vol -ge 33 ]]; then
            icon="î"
    elif [[ $vol -ge 0 ]]; then
            icon="îœ¿"
    else
            icon="îœ½"
    fi ;}

# iconget
# icon="ï€¨  "
icon="ğŸ˜ƒ"

printpastatus() {
   [[ $(pamixer --get-mute) = "true" ]] && echo "ïš©" && exit
   echo "${icon} ${vol}%";
}
printpastatus
